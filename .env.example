# ===========================================
# FarmShare Marketplace - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# For Vercel deployment, add these in Vercel Dashboard > Settings > Environment Variables

# ===========================================
# API CONFIGURATION (REQUIRED)
# ===========================================
# Backend API URL

# For LOCAL development:
NEXT_PUBLIC_API_BASE_URL=http://localhost:8282

# For PRODUCTION (Koyeb) - use this in Vercel:
# NEXT_PUBLIC_API_BASE_URL=https://wet-gisela-fitness-space-mix-76801c19.koyeb.app

# ===========================================
# PAYMENT GATEWAYS (REQUIRED FOR PAYMENTS)
# ===========================================
# Paystack (Nigerian payments)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_test_public_key_here

# Stripe (International payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_public_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=FarmShare
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics and Monitoring (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

